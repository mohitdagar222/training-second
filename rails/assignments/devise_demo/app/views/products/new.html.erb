  <% if @product.errors.any? %>
    <div style="color: red; text-align:center;">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this Product from being Created:</h2>
      <ul style = "list-style-type:none;color:green;">
        <% @product.errors.each do |error| %>
          <li>*<%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<%= form_for @product do |f| %>
  <div id = "form2">
    <h2>New Product </h2>
    <%= f.label :name, "Enter Product Name", class: :label %>
    <%= f.text_field :name %><br><br clear="all">
    <%= f.label :price, "Enter Product Price:", class: :label %>
    <%= f.text_field :price %><br><br><br clear="all">
    <%= f.submit %>
  </div>
<% end %>
