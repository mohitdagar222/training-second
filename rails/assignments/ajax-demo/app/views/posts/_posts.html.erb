
<table>
<thead>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th colspan="3"></th>
  </tr>
</thead>

<tbody>
  <% posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.description %></td>
      <td><%= link_to 'Show', post, remote: true %></td>
      <td><%= link_to 'Edit', edit_post_path(post),remote: true %></td>
      <td><%= link_to 'Destroy', post, method: :delete,remote: true, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</tbody>
</table>
